LDR Sensor detects change in light intensity and lights up white led to indicate presence of someone. â€“ can be replaced with force sensor, flex sensor
Ultrasonic sensor detects presence of object. Can be used to light different leds depending on the distance of object found. Can be replaced with PIR sensor (motion detector),  or temperature sensor

CODE
int dst = 0;

int var = 0;

int light = 0;

long readUltrasonicDistance(int triggerPin, int echoPin)
{
  pinMode(triggerPin, OUTPUT);  // Clear the trigger
  digitalWrite(triggerPin, LOW);
  delayMicroseconds(2);
  // Sets the trigger pin to HIGH state for 10 microseconds
  digitalWrite(triggerPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(triggerPin, LOW);
  pinMode(echoPin, INPUT);
  // Reads the echo pin, and returns the sound wave travel time in microseconds
  return pulseIn(echoPin, HIGH);
}

void setup()
{
  pinMode(A1, INPUT);
  Serial.begin(9600);

  pinMode(4, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(13, OUTPUT);
  pinMode(3, OUTPUT);
}

void loop()
{
  
  
  var = 0.01723 * readUltrasonicDistance(A0, A0);
 // Serial.println("ultra "+var);
 
  while (true) {
    delay(100);
    light = analogRead(A1);
    dst = 0.01723 * readUltrasonicDistance(A0, A0);
    Serial.println(light);
    analogWrite(3,map(light,0,1023,0,255));
    if (dst < 300 && dst >= 200) {
      digitalWrite(4, HIGH);} 
                else {
      digitalWrite(4, LOW);
    }
    if (dst < 200 && dst >= 100) {
      digitalWrite(7, HIGH);
    } else {
      digitalWrite(7, LOW);
    }
    if (dst < 100 && dst >= 20) {
      digitalWrite(13, HIGH);
    } else {
      digitalWrite(13, LOW);
    }
    if (dst == 0 || dst >= 20) {
      digitalWrite(13, HIGH);
    } else {
      digitalWrite(13, LOW);
    }
  }
  delay(10); // Delay a little bit to improve simulation performance
}
